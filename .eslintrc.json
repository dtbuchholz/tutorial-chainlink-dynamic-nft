{
  "env": {
    "browser": false,
    "es2021": true,
    "mocha": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["*.sol"],
      "parser": "solidity-eslint-parser",
      "plugins": ["solidity"]
    }
  ],
  "extends": ["standard", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "n/no-unsupported-features/es-syntax": ["error", { "ignores": ["modules"] }]
  }
}
